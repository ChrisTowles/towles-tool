{
  "name": "@towles/tool",
  "version": "0.0.36",
  "description": "One off quality of life scripts that I use on a daily basis.",
  "homepage": "https://github.com/ChrisTowles/towles-tool#readme",
  "bugs": {
    "url": "https://github.com/ChrisTowles/towles-tool/issues"
  },
  "license": "MIT",
  "author": "Chris Towles <Chris.Towles.Dev@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChrisTowles/towles-tool.git"
  },
  "funding": {
    "url": "https://github.com/sponsors/ChrisTowles"
  },
  "bin": {
    "towles-tool": "./bin/run.ts",
    "tt": "./bin/run.ts"
  },
  "files": [
    "bin",
    "patches",
    "src"
  ],
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "version:sync": "pnpm tsx scripts/sync-versions.ts",
    "prepublishOnly": "pnpm run version:sync",
    "start": "tsx bin/run.ts",
    "format": "oxfmt --write .",
    "format:check": "oxfmt --check .",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "test": "vitest run",
    "test:watch": "CI=DisableCallingClaude vitest watch",
    "typecheck": "tsgo --noEmit --incremental",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^2.1.4",
    "@anthropic-ai/sdk": "^0.56.0",
    "@oclif/core": "^4.3.2",
    "consola": "^3.4.2",
    "d3-hierarchy": "^3.1.2",
    "fzf": "^0.5.2",
    "luxon": "^3.7.1",
    "neverthrow": "^8.2.0",
    "picocolors": "^1.1.1",
    "prompts": "^2.4.2",
    "strip-ansi": "^7.1.0",
    "tinyexec": "^0.3.2",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@oclif/test": "^4.1.10",
    "@types/d3-hierarchy": "^3.1.7",
    "@types/luxon": "^3.6.2",
    "@types/node": "^22.16.3",
    "@types/prompts": "^2.4.9",
    "@typescript/native-preview": "^7.0.0-dev.20260111.1",
    "bumpp": "^10.4.0",
    "lint-staged": "^15.5.2",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.7.0",
    "simple-git-hooks": "^2.13.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^4.0.17"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged -q && claude plugin validate ."
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,md}": "oxfmt --write",
    "*": "oxlint --quiet --fix"
  },
  "oclif": {
    "bin": "tt",
    "commands": {
      "identifier": "default",
      "strategy": "explicit",
      "target": "./src/commands/index.ts"
    },
    "dirname": "towles-tool",
    "topicSeparator": " "
  },
  "packageManager": "pnpm@10.27.0",
  "pnpm": {
    "patchedDependencies": {
      "prompts@2.4.2": "patches/prompts.patch"
    }
  },
  "trustedDependencies": [
    "@anthropic-ai/claude-code"
  ]
}

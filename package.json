{
  "name": "@towles/tool",
  "type": "module",
  "version": "0.0.21",
  "packageManager": "pnpm@10.13.1",
  "description": "One off quality of life scripts that I use on a daily basis.",
  "author": "Chris Towles <Chris.Towles.Dev@gmail.com>",
  "license": "UNLICENSED",
  "funding": {
    "url": "https://github.com/sponsors/ChrisTowles"
  },
  "homepage": "https://github.com/ChrisTowles/towles-tool#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChrisTowles/towles-tool.git"
  },
  "bugs": {
    "url": "https://github.com/ChrisTowles/towles-tool/issues"
  },
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": {
    "towles-tool": "./dist/index.mjs",
    "tt": "./dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "build:bin": "bun build src/index.ts --compile --outfile dist/tt",
    "build:bin:linux": "bun build src/index.ts --compile --target=bun-linux-x64 --outfile dist/tt-linux-x64",
    "build:bin:macos": "bun build src/index.ts --compile --target=bun-darwin-arm64 --outfile dist/tt-darwin-arm64",
    "build:bin:windows": "bun build src/index.ts --compile --target=bun-windows-x64 --outfile dist/tt-windows-x64.exe",
    "build:bin:all": "pnpm build:bin:linux && pnpm build:bin:macos && pnpm build:bin:windows",
    "dev": "unbuild --stub",
    "eval:dev": "evalite watch",
    "eval": "evalite",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "lint:fix_all": "oxlint --fix .",
    "lint:package": "pnpm dlx publint --fix && pnpm dlx knip",
    "prepublishOnly": "nr build",
    "release:local": "changelogen --bump && pnpm publish --no-git-checks -r --access public",
    "release": "changelogen --bump && echo \"github action will run and publish to npm\"",
    "changelog": "changelogen",
    "start": "tsx src/index.ts",
    "test": "vitest --run",
    "test:watch": "CI=DisableCallingClaude vitest --watch",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "catalog:cli",
    "@anthropic-ai/sdk": "catalog:cli",
    "@clack/prompts": "catalog:cli",
    "chalk": "^5.6.2",
    "citty": "^0.1.6",
    "comment-json": "catalog:cli",
    "consola": "catalog:cli",
    "fzf": "catalog:cli",
    "luxon": "catalog:cli",
    "neverthrow": "catalog:cli",
    "prompts": "catalog:cli",
    "strip-ansi": "catalog:cli",
    "tinyexec": "catalog:cli",
    "yargs": "catalog:cli",
    "zod": "catalog:cli",
    "zx": "^8.8.5"
  },
  "devDependencies": {
    "@antfu/ni": "catalog:cli",
    "@types/luxon": "catalog:types",
    "@types/node": "catalog:types",
    "@types/prompts": "catalog:types",
    "@types/yargs": "catalog:types",
    "autoevals": "^0.0.131",
    "bumpp": "catalog:cli",
    "changelogen": "^0.6.2",
    "evalite": "^0.19.0",
    "lint-staged": "catalog:cli",
    "oxlint": "catalog:testing",
    "simple-git-hooks": "catalog:cli",
    "tsx": "catalog:cli",
    "typescript": "catalog:cli",
    "unbuild": "catalog:cli",
    "vite": "catalog:cli",
    "vitest": "catalog:testing",
    "vitest-package-exports": "catalog:testing",
    "yaml": "catalog:testing"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm dlx lint-staged -q"
  },
  "lint-staged": {
    "*": "oxlint --quiet --fix"
  },
  "directories": {
    "test": "test"
  }
}

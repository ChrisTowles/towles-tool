{
  "name": "@towles/tool",
  "type": "module",
  "version": "0.0.32",
  "description": "One off quality of life scripts that I use on a daily basis.",
  "author": "Chris Towles <Chris.Towles.Dev@gmail.com>",
  "license": "MIT",
  "bin": {
    "tt": "./bin/run.ts",
    "towles-tool": "./bin/run.ts"
  },
  "files": [
    "bin",
    "src",
    "patches"
  ],
  "publishConfig": {
    "access": "public"
  },
  "funding": {
    "url": "https://github.com/sponsors/ChrisTowles"
  },
  "homepage": "https://github.com/ChrisTowles/towles-tool#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChrisTowles/towles-tool.git"
  },
  "bugs": {
    "url": "https://github.com/ChrisTowles/towles-tool/issues"
  },
  "scripts": {
    "version:sync": "bun scripts/sync-versions.ts",
    "prepublishOnly": "bun run version:sync && bun scripts/zip-plugin.ts",
    "start": "bun bin/run.ts",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "test": "vitest run",
    "test:watch": "CI=DisableCallingClaude vitest watch",
    "typecheck": "tsgo --noEmit --incremental",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^2.1.4",
    "@anthropic-ai/sdk": "^0.56.0",
    "@oclif/core": "^4.3.2",
    "consola": "^3.4.2",
    "d3-hierarchy": "^3.1.2",
    "fzf": "^0.5.2",
    "luxon": "^3.7.1",
    "neverthrow": "^8.2.0",
    "picocolors": "^1.1.1",
    "prompts": "^2.4.2",
    "strip-ansi": "^7.1.0",
    "tinyexec": "^0.3.2",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@oclif/test": "^4.1.10",
    "@types/d3-hierarchy": "^3.1.7",
    "@types/luxon": "^3.6.2",
    "@types/node": "^22.16.3",
    "@types/prompts": "^2.4.9",
    "@typescript/native-preview": "^7.0.0-dev.20260111.1",
    "lint-staged": "^15.5.2",
    "oxlint": "^1.7.0",
    "simple-git-hooks": "^2.13.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^4.0.17"
  },
  "pnpm": {
    "patchedDependencies": {
      "prompts@2.4.2": "patches/prompts.patch"
    }
  },
  "trustedDependencies": [
    "@anthropic-ai/claude-code"
  ],
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged -q && claude plugin validate ."
  },
  "lint-staged": {
    "*": "oxlint --quiet --fix"
  },
  "oclif": {
    "bin": "tt",
    "dirname": "towles-tool",
    "commands": {
      "strategy": "explicit",
      "target": "./src/commands/index.ts",
      "identifier": "default"
    },
    "topicSeparator": " "
  }
}

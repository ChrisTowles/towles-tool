{
  "name": "@towles/tool",
  "version": "0.0.43",
  "description": "CLI tool with autonomous task runner (ralph), observability, and quality-of-life commands for daily development.",
  "keywords": [
    "autonomic",
    "claude",
    "cli",
    "git",
    "journal",
    "oclif",
    "ralph"
  ],
  "homepage": "https://github.com/ChrisTowles/towles-tool#readme",
  "bugs": {
    "url": "https://github.com/ChrisTowles/towles-tool/issues"
  },
  "license": "MIT",
  "author": "Chris Towles <Chris.Towles.Dev@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChrisTowles/towles-tool.git"
  },
  "funding": {
    "url": "https://github.com/sponsors/ChrisTowles"
  },
  "bin": {
    "towles-tool": "./bin/run.ts",
    "tt": "./bin/run.ts"
  },
  "files": [
    "bin",
    "patches",
    "src"
  ],
  "type": "module",
  "main": "bin/run.ts",
  "scripts": {
    "start": "tsx ./bin/run.ts",
    "typecheck": "tsgo --noEmit --incremental",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "format": "oxfmt --write",
    "format:check": "oxfmt --check",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@oclif/core": "^4.3.16",
    "consola": "^3.4.2",
    "d3-hierarchy": "^3.1.2",
    "globby": "^14.1.0",
    "luxon": "^3.5.0",
    "open": "^10.1.1",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@oclif/test": "^4.1.13",
    "@total-typescript/tsconfig": "^1.0.4",
    "@tsconfig/strictest": "^2.0.5",
    "@types/d3-hierarchy": "^3.1.7",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.10.10",
    "lint-staged": "^15.5.1",
    "oxlint": "^1.2.0",
    "simple-git-hooks": "^2.11.1",
    "tsgo": "^0.8.3",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && pnpm typecheck"
  },
  "lint-staged": {
    "package.json": "oxfmt --write",
    "*.{ts,tsx,mts,cts,js,cjs,mjs}": [
      "oxfmt --write",
      "oxlint --fix"
    ],
    "*.{json,md,yaml,yml}": "oxfmt --write"
  },
  "oclif": {
    "bin": "tt",
    "commands": {
      "strategy": "pattern",
      "target": "./src/commands"
    },
    "dirname": "towles-tool",
    "plugins": [],
    "topicSeparator": " "
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

{
  "name": "@towles/tool",
  "type": "module",
  "version": "0.0.4",
  "packageManager": "pnpm@10.6.2",
  "description": "One off quality of life scripts that I use on a daily basis.",
  "author": "Chris Towles <Chris.Towles.Dev@gmail.com>",
  "license": "MIT",
  "funding": {
    "url": "https://github.com/sponsors/ChrisTowles"
  },
  "homepage": "https://github.com/ChrisTowles/towles-tool#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChrisTowles/towles-tool.git"
  },
  "bugs": {
    "url": "https://github.com/ChrisTowles/towles-tool/issues"
  },
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": {
    "towles-tool": "./dist/index.mjs",
    "tt": "./dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "lint": "eslint",
    "prepublishOnly": "nr build",
    "release:local": "bumpp && pnpm publish --no-git-checks -r --access public",
    "release": "bumpp && echo \"github action will run and publish to npm\"",
    "start": "tsx src/index.ts",
    "test": "vitest --run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "commander": "catalog:cli"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:cli",
    "@antfu/ni": "catalog:cli",
    "@antfu/utils": "catalog:inlined",
    "@types/node": "catalog:types",
    "bumpp": "catalog:cli",
    "eslint": "catalog:cli",
    "lint-staged": "catalog:cli",
    "simple-git-hooks": "catalog:cli",
    "tinyexec": "catalog:utils",
    "tsx": "catalog:cli",
    "typescript": "catalog:cli",
    "unbuild": "catalog:cli",
    "vite": "catalog:cli",
    "vitest": "catalog:testing",
    "vitest-package-exports": "catalog:testing",
    "yaml": "catalog:testing"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm i --frozen-lockfile --ignore-scripts --offline && npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "directories": {
    "test": "test"
  }
}

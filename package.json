{
  "name": "@towles/tool",
  "type": "module",
  "version": "0.0.21",
  "description": "One off quality of life scripts that I use on a daily basis.",
  "author": "Chris Towles <Chris.Towles.Dev@gmail.com>",
  "license": "UNLICENSED",
  "funding": {
    "url": "https://github.com/sponsors/ChrisTowles"
  },
  "homepage": "https://github.com/ChrisTowles/towles-tool#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChrisTowles/towles-tool.git"
  },
  "bugs": {
    "url": "https://github.com/ChrisTowles/towles-tool/issues"
  },
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": {
    "towles-tool": "./bin/run.js",
    "tt": "./bin/run.js"
  },
  "files": [
    "bin",
    "dist",
    "src"
  ],
  "scripts": {
    "build": "unbuild",
    "build:bin": "bun build src/index.ts --compile --minify --outfile dist/tt",
    "build:bin:linux": "bun build src/index.ts --compile --minify --target=bun-linux-x64 --outfile dist/tt-linux-x64",
    "build:bin:macos": "bun build src/index.ts --compile --minify --target=bun-darwin-arm64 --outfile dist/tt-darwin-arm64",
    "build:bin:windows": "bun build src/index.ts --compile --minify --target=bun-windows-x64 --outfile dist/tt-windows-x64.exe",
    "build:bin:all": "bun run build:bin:linux && bun run build:bin:macos && bun run build:bin:windows",
    "dev": "unbuild --stub",
    "eval:dev": "evalite watch",
    "eval": "evalite",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "lint:fix_all": "oxlint --fix .",
    "lint:package": "bunx publint --fix && bunx knip",
    "prepublishOnly": "bun run build",
    "release:local": "changelogen --bump && npm publish --no-git-checks --access public",
    "release": "changelogen --bump && echo \"github action will run and publish to npm\"",
    "changelog": "changelogen",
    "start": "bun src/index.ts",
    "test": "vitest --run",
    "test:watch": "CI=DisableCallingClaude vitest --watch",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^2.1.4",
    "@anthropic-ai/sdk": "^0.56.0",
    "@clack/prompts": "^0.11.0",
    "@oclif/core": "^4.3.2",
    "citty": "^0.1.6",
    "comment-json": "^4.2.5",
    "consola": "^3.4.2",
    "fzf": "^0.5.2",
    "luxon": "^3.7.1",
    "neverthrow": "^8.2.0",
    "picocolors": "^1.1.1",
    "prompts": "^2.4.2",
    "strip-ansi": "^7.1.0",
    "tinyexec": "^0.3.2",
    "yargs": "^17.7.2",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@oclif/test": "^4.1.10",
    "@types/luxon": "^3.6.2",
    "@types/node": "^22.16.3",
    "@types/prompts": "^2.4.9",
    "@types/yargs": "^17.0.32",
    "autoevals": "^0.0.131",
    "bumpp": "^10.2.0",
    "changelogen": "^0.6.2",
    "evalite": "^0.19.0",
    "lint-staged": "^15.5.2",
    "oxlint": "^1.7.0",
    "simple-git-hooks": "^2.13.0",
    "typescript": "^5.8.3",
    "unbuild": "^3.5.0",
    "vite": "^6.3.5",
    "vitest": "^3.2.4",
    "vitest-package-exports": "^0.1.1",
    "yaml": "^2.8.0"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@latest"
  },
  "patchedDependencies": {
    "prompts": "patches/prompts.patch"
  },
  "trustedDependencies": [
    "@anthropic-ai/claude-code"
  ],
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged -q"
  },
  "lint-staged": {
    "*": "oxlint --quiet --fix"
  },
  "directories": {
    "test": "test"
  },
  "oclif": {
    "bin": "tt",
    "dirname": "towles-tool",
    "commands": {
      "strategy": "pattern",
      "target": "./src/oclif-commands"
    },
    "topicSeparator": " "
  }
}
